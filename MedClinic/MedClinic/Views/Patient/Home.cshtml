@model MedClinic.Model.PatientModel
@{
    ViewData["Title"] = "Home";
}
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">
                    <img src="@Model.Photo" class="img-thumbnail" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 p-1">
                    <a href="\patient\@Model.Id">
                        <button type="button" class="btn btn-primary w-100">
                            Профиль
                        </button>
                    </a>
                </div>
                <div class="col-lg-12 p-1">
                    <button type="button" class="btn btn-outline-primary w-100">
                        Запись к специалисту
                    </button>
                </div>
                <div class="col-lg-12 p-1">
                    <a href="\patientData\@Model.Id">
                        <button type="button" class="btn btn-outline-primary w-100">
                            Результаты анализов
                        </button>
                    </a>
                </div>
                <div class="col-lg-12 p-1">
                    <a href="\patientConclusions\@Model.Id">
                        <button type="button" class="btn btn-outline-primary w-100">
                            Заключения специалистов
                        </button>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-12 profile-wrapper">
                    <div class="col-lg-12">
                        <div class="text-center">
                            @Model.FullName
                        </div>
                    </div>
                    <div class="profile-wrapper">
                        <div class="col-lg-12">
                            <div class="text-left">
                                Дата Рождения : @Model.BirthDate.ToShortDateString()
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="text-left">
                                Пол : @(Model.IsMan ? "М" : "Ж")
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="text-left">
                                Полис : @Model.MedData
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="text-left">
                                Паспорт : @Model.PassData
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="text-left">
                                Email : @Model.Email
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

