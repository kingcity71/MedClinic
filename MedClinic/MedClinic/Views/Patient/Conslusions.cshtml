@model PatientConclusionsViewModel
@{
    ViewData["Title"] = "Home";
    var isOwner = User.Identity.Name == Model.Patient.Email;
}
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">
                    <img src="@Model.Patient.Photo" class="img-thumbnail" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 p-1">
                    <a href="\patient\@Model.Patient.Id">
                        <button type="button" class="btn btn-outline-primary w-100">
                            Профиль
                        </button>
                    </a>
                </div>
                @if (isOwner)
                {
                    <div class="col-lg-12 p-1">
                        <a href="\patient\Edit\@Model.Patient.Id">
                            <button type="button" class="btn btn-outline-primary w-100">
                                Редактировать
                            </button>
                        </a>
                    </div>
                    <div class="col-lg-12 p-1">
                        <a href="\patient\MySchedules\">
                            <button type="button" class="btn btn-outline-primary w-100">
                                Мои записи
                            </button>
                        </a>
                    </div>
                }
                <div class="col-lg-12 p-1">
                    <a href="\patientData\@Model.Patient.Id">
                        <button type="button" class="btn btn-outline-primary w-100">
                            Результаты анализов
                        </button>
                    </a>
                </div>
                <div class="col-lg-12 p-1">
                    <a href="\patientConclusions\@Model.Patient.Id">
                        <button type="button" class="btn btn-primary w-100">
                            Заключения специалистов
                        </button>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-12 profile-wrapper">
                    <div class="col-lg-12">
                        <div class="text-center">
                            @Model.Patient.FullName
                        </div>
                    </div>
                    @foreach (var conslusion in Model.Conslusions)
                    {
                        <div class="profile-wrapper">
                            <div class="col-lg-12">
                                <div class="text-left">
                                    Дата : @conslusion.Date.ToShortDateString()
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="text-left">
                                    Доктор :
                                    <a href="\doctor\@conslusion.Doctor.Id">
                                        @conslusion.Doctor.FullName
                                    </a>,
                                    @conslusion.Doctor.Specialization
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="text-left">
                                    Заключение : @conslusion.Result
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

